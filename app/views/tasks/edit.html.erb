<h1>Edit Task</h1>

<%= form_with model: @task, local: true do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </div>

  <div>
    <%= f.label :completed, "Mark as completed" %>
    <%= f.check_box :completed %>
  </div>

  <div>
    <%= f.submit 'Update Task' %>
  </div>
<% end %>

<%= link_to 'Back to Task List', tasks_path %>
