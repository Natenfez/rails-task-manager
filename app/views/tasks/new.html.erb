<h1>New Task</h1>

<%= form_with model: @task do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :details, class: 'form-label' %><br>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  <div>
    <%= f.submit 'Create Task', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to Task List', tasks_path, class: 'btn btn-secondary mt-3' %>
